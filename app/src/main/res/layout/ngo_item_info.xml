<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ngoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_marginTop="@dimen/material_spacing_medium"
        tools:text="@string/ngo_description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_label"
        android:layout_marginTop="@dimen/material_spacing_medium"
        android:textAppearance="?attr/textAppearanceCaption" />

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/donation_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAppearance="?attr/textAppearanceBody1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/donate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_spacing_medium"
        android:text="@string/donate"
        android:enabled="false"
        style="@style/Widget.App.PrimaryButton"/>

</LinearLayout>
